<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="80dp"
	android:orientation="horizontal"
	android:gravity="center_vertical">

	<ImageView
		android:layout_height="40dp"
		android:layout_width="40dp"
		android:src="@drawable/ic_launcher"
		android:id="@+id/itembackupImageView_icon"/>

	<LinearLayout
		android:layout_height="70dp"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:layout_weight="1.0"
		android:gravity="left|center">

		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:text="名称"
			android:singleLine="true"
			android:textSize="10sp"
			android:gravity="center"
			android:textColor="?attr/text_color"
			android:id="@+id/itembackupTextView_name"/>

		<TextView
			android:layout_height="15dp"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:text="路径"
			android:textSize="10sp"
			android:gravity="center"
			android:singleLine="false"
			android:textColor="?attr/text_color"
			android:id="@+id/itembackupTextView_path"
			android:maxLines="2"/>

		<TextView
			android:layout_height="15dp"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:text="类型"
			android:textSize="10sp"
			android:gravity="center"
			android:singleLine="true"
			android:textColor="?attr/text_color"
			android:id="@+id/itembackupTextView_type"/>

	</LinearLayout>

	<TextView
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_width="wrap_content"
		android:textColor="#E40909"
		android:textSize="10sp"
		android:id="@+id/itembackupTextView_isDeleted"/>

</LinearLayout>

