<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="60dp"
	android:orientation="horizontal"
	android:gravity="center_vertical">

	<ImageView
		android:layout_height="40dp"
		android:layout_width="40dp"
		android:src="@drawable/ic_launcher"
		android:id="@+id/itemappinfoImageView1"/>

	<LinearLayout
		android:layout_height="50dp"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:layout_weight="1.0">

		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:text="名称"
			android:singleLine="true"
			android:id="@+id/itemappinfoTextView1_appName"
			android:textSize="10sp"
			android:gravity="center"
			android:textColor="?attr/text_color"/>

		<TextView
			android:layout_height="15dp"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:text="版本"
			android:textSize="10sp"
			android:gravity="center"
			android:singleLine="true"
			android:textColor="?attr/text_color"
			android:id="@+id/itemappinfoTextView1_versionName"/>

		<TextView
			android:layout_height="15dp"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:text="大小"
			android:textSize="10sp"
			android:gravity="center"
			android:singleLine="true"
			android:textColor="?attr/text_color"
			android:id="@+id/itemappinfoTextView1_packageName"/>

	</LinearLayout>

	<TextView
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_width="wrap_content"
		android:textColor="#E40909"
		android:id="@+id/itemappinfoTextView_isBacked"
		android:textSize="10sp"/>

</LinearLayout>

